{
  "plugins": ["@shopify/prettier-plugin-liquid"],
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "semi": true,
  "arrowParens": "avoid",

  "overrides": [
    {
      "files": "*.md",
      "options": {
        "embeddedLanguageFormatting": "auto"
      }
    }
  ]
}
